{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "removeComments": true,
    "downlevelIteration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "outDir": "dest",
    "declarationDir": "def",
    "lib": ["es2015", "dom"],
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "files": ["src/index.ts"],
  "include": [
    "src/**/*"
  ]
}